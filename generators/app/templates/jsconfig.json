{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      // "webpack-env",
      // "jest"
    ],
    "paths": {
      "@/*": ["./*"],
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "./*.json",
    "./*.config.js",
    "./**/*.d.ts",
    "./**/*.js",
    "./**/*.json",
    "./**/*.jsx",
    "./**/*.vue",
    "./tests/**/*.js",
    "./tests/**/*.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
